<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/system_accent1_800"
    tools:context=".Pagina3">


    <Button
        android:id="@+id/Prev_button"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginLeft="110dp"
        android:layout_marginRight="110dp"
        android:layout_marginTop="550dp"
        android:text="previous"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Ghid_button"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginLeft="110dp"
        android:layout_marginRight="110dp"
        android:layout_marginTop="475dp"
        android:text="Ghid"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/etaj_secretariat" />

    <ScrollView
        android:id="@+id/Indicatii"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_subsol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subsol" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_parter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parter" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_etaj1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Etaj 1" />
    </com.google.android.material.tabs.TabLayout>

</RelativeLayout>
